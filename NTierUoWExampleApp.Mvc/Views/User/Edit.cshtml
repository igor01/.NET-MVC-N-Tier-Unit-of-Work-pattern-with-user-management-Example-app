@model NTierUoWExampleApp.Core.BindingModels.Account.EditUserViewModel
@{
    ViewBag.Title = "Edit";
}

@section breadcrumbs{
<section class="content-header">
    <h1 class="page-header">
        Edit user
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="@Url.Action("Index", "User")">Users</a>
        </li>
        <li class="active">
            Edit user
        </li>
    </ol>
</section>
}


<div class="row">
    <div class="col-xs-12 col-md-10 col-md-offset-1">
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Edit user</h3>
            </div>


            @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
            {
                <div class="box-body">


                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.Id)


                    <div class="form-group">
                        <div class="col-sm-3">
                            @Html.LabelFor(x => x.UserAccessRole, new { @class = "col-sm-7 control-label" })
                        </div>

                        <div class="col-sm-9">
                            @Html.DropDownListFor(x => x.UserAccessRole, new SelectList(Model.UserAccessRoles), "-- Please select --")

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-offset-3">
                            @Html.ValidationMessageFor(x => x.UserAccessRole)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-3">
                            @Html.LabelFor(x => x.Email, new { @class = "col-sm-7 control-label" })
                        </div>
                        <div class="col-sm-9">
                            <div class="input-group">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @readonly = true })
                                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-offset-3">
                            @Html.ValidationMessageFor(x => x.Email)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-3">
                            @Html.LabelFor(x => x.UserName, new { @class = "col-sm-7 control-label" })
                        </div>
                        <div class="col-sm-9">
                            <div class="input-group">
                                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @readonly = true })
                                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-offset-3">
                            @Html.ValidationMessageFor(x => x.UserName)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-3">
                            @Html.LabelFor(x => x.FirstName, new { @class = "col-sm-7 control-label" })
                        </div>
                        <div class="col-sm-9">
                            <div class="input-group">
                                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                                <span class="input-group-addon"><i class="fa fa-info-circle"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-offset-3">
                            @Html.ValidationMessageFor(x => x.FirstName)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-3">
                            @Html.LabelFor(x => x.LastName, new { @class = "col-sm-7 control-label" })
                        </div>
                        <div class="col-sm-9">
                            <div class="input-group">
                                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                                <span class="input-group-addon"><i class="fa fa-info-circle"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-offset-3">
                            @Html.ValidationMessageFor(x => x.LastName)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-3">
                            @Html.LabelFor(x => x.PhoneNumber, new { @class = "col-sm-7 control-label" })
                        </div>
                        <div class="col-sm-9">
                            <div class="input-group">
                                @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
                                <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-offset-3">
                            @Html.ValidationMessageFor(x => x.PhoneNumber)
                        </div>
                    </div>


                </div>
                <div class="box-footer">
                    <a href="@Url.Action("Index", "User")" class="btn btn-default">Cancel</a>
                    <button type="submit" class="btn btn-info pull-right">Submit</button>
                </div>
            }

        </div>
    </div>
</div>
